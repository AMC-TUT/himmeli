<%= simple_form_for(resource, :as => resource_name, :html => { :class => 'form-signin' }, :url => registration_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">Sign up</h2>

  <%= bootstrap_flash %>
  <%= f.error_notification %>

  <%= f.text_field :email, :required => true, autofocus: true, class: 'form-control', placeholder: 'Email' %>
  <%= f.password_field :password, :required => true, class: 'form-control', placeholder: 'Password' %>
  <%= f.password_field :password_confirmation, :required => true, class: 'form-control', placeholder: 'Password confirmation' %>

  <%= f.button :submit, "Sign up", :class => 'btn btn-large btn-primary' %>
  <hr>
  <%= render "devise/shared/links" %>
<% end %>