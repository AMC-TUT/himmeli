<div class="row">
  <div class="col-sm-12">
    <h1>Listing versions</h1>

    <% if @versions.blank? %>
    <%= render :partial => 'shared/empty' %>
    <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Version no.</th>
          <th>Hit points</th>
          <th>Target speed</th>
          <th>Rows</th>
          <th>Columns</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @versions.each do |version| %>
        <tr>
          <td><%= version.id %></td>
          <td><%= version.hit_points %></td>
          <td><%= version.target_speed %></td>
          <td><%= version.rows %></td>
          <td><%= version.columns %></td>
          <td>
            <%= link_to version do %>
            <span class="glyphicon glyphicon-info-sign" rel="tooltip" title="Show"></span>
            <% end %>
          </td>
          <td>
            <%= link_to edit_version_path(version) do %>
            <span class="glyphicon glyphicon-pencil" rel="tooltip" title="Edit"></span>
            <% end %>
          </td>
          <td>
            <%= link_to version, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash" rel="tooltip" title="Remove"></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="pagination-holder">
      <%= will_paginate @versions, :renderer => BootstrapPagination::Rails %>
    </div>
    <% end %>

    <br>

    <%= link_to 'New Version', new_version_path, :class => 'btn btn-primary' %>

  </div>
</div>
