<%= simple_form_for @version, :html => { :class => 'form-horizontal' } do |f| %>

  <% @model = @version %>
  <%= render 'shared/error_messages' %>

  <div class="control-group">
    <%= f.label :hit_points, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :hit_points, :class => 'number_field form-control', required: true, :min => 0 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :target_speed, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :target_speed, :class => 'number_field form-control', required: true, :min => 0 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :rows, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :rows, :class => 'number_field form-control', required: true, :min => 0 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :columns, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :columns, :class => 'number_field form-control', required: true, :min => 0 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :levels, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :levels, :class => 'number_field form-control', required: true, :min => 1 %>
    </div>
  </div>

  <hr>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', versions_path, :class => 'btn btn-default' %>
  </div>
<% end %>