<div class="row">
  <div class="col-sm-12">
    <h1>Listing settings</h1>

    <% if @settings.blank? %>
      <%= render :partial => 'shared/empty' %>
    <% else %>
    <table class="table table-striped">

      <thead>
        <tr>
          <th>Person</th>
          <th>Key</th>
          <th>Value</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @settings.each do |setting| %>
          <tr>
            <td><%= setting.person.first_name %> <%= setting.person.last_name %></td>
            <td><%= setting.key %></td>
            <td><%= setting.value %></td>
            <td><%= link_to 'Show', setting %></td>
            <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
            <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>

    <br>

    <%= link_to 'New Setting', new_setting_path, :class => 'btn btn-primary' %>

  </div>
</div>
