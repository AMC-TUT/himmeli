<%= simple_form_for @setting, :html => { :class => 'form-horizontal' } do |f| %>

  <% @model = @setting %>
  <%= render 'shared/error_messages' %>

  <div class="control-group">
    <%= f.label :person, :class => 'control-label' %>
    <div class="controls">
      <%= f.association :person, collection: Person.all(order: 'last_name'), prompt: "Choose a Person", :label => false, :label_method => lambda { |p| "#{p.last_name}, #{p.first_name}" }, :value_method => :id, :class => 'form-control', required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :last_level, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :last_level, :class => 'number_field form-control', required: true, :min => 1 %>
    </div>
  </div>

  <hr>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', settings_path, :class => 'btn btn-default' %>
  </div>
<% end %>